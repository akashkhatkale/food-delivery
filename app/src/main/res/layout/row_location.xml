<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/newLocationLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:background="@drawable/yellow_button_background"
        android:paddingHorizontal="10dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/locationIcon_row"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/white_add_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/locationTag_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:text="..."
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/locationName_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_regular"
                android:text="..."
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorWhite"
                android:alpha="0.7"
                android:textSize="12sp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/selectIcon_row"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/white_select_icon" />

    </LinearLayout>


</LinearLayout>