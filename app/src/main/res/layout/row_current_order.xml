<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >

    <TextView
        android:id="@+id/orderStatus_currentOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order recieved"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#fff"
        android:fontFamily="@font/montserrat_medium"
        android:paddingVertical="2dp"
        android:paddingHorizontal="10dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/recieved"
        android:background="@drawable/small_rounded_button_background"
        android:layout_marginTop="10dp"
        android:textSize="12sp"

        />
    <TextView
        android:id="@+id/totalAmount_currentOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginStart="22dp"
        android:text="Total amount to be paid : "
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/icon_currentOrder"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/white_home_icon"
            android:backgroundTint="#50000000"
            />
        <TextView
            android:id="@+id/address_currentOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#50000000"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/foodItems_currentOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#50000000"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="14sp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
        android:layout_marginVertical="10dp"
        >
        <EditText
            android:id="@+id/requestText_currentOrder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/white_request_icon"
            android:drawableTint="@color/colorGray"
            android:layout_marginStart="15dp"
            android:hint="Any requests to the restaurant ?"
            android:textColorHint="@color/colorGray"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            android:inputType="textMultiLine"
            android:paddingHorizontal="15dp"
            android:drawablePadding="15dp"
            android:paddingVertical="15dp"
            android:background="@drawable/edittext_background"
            />
        <ImageView
            android:id="@+id/sendRequestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_send_icon"
            android:backgroundTint="@color/colorPrimary"
            />


    </LinearLayout>



    <RelativeLayout
        android:id="@+id/cancelOrderButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/cancelOrderButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/colorWhite"
            android:text="Cancel Order"
            android:gravity="center"
            android:alpha="1.0"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:translationZ="-1dp"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#20000000"
        android:layout_marginTop="10dp"
        />



</LinearLayout>