<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:background="@color/colorPrimary"
    android:paddingVertical="10dp"
    >

    <View
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:background="#30ffffff"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/totalAmount_selectPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Total amount to be paid :"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="20dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/icon_selectPayment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/white_home_icon"
            android:backgroundTint="#90ffffff"
            />
        <TextView
            android:id="@+id/address_selectPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#90ffffff"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_medium"
        android:text="Select payment mode : "
        android:textColor="@color/colorWhite"
        android:layout_marginTop="30dp"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/cashPayment_selectPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@drawable/greyborderbutton_background"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/cash_icon"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cash on delivery"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/selectCashIcon_selectPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_select_icon"
            android:visibility="invisible"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/onlinePayment_selectPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/greyborderbutton_background"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp"
        android:minHeight="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/online_icon"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Online payment (At the time of delivery)"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/selectOnlineIcon_selectPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/white_select_icon"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        >

        <Button
            android:id="@+id/placeOrder_selectPayment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/colorWhite"
            android:text="Place order"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:translationZ="-2dp"
            android:background="@drawable/yellow_button_background"
            />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorWhite"
            android:elevation="0dp"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/placeOrderProgressBar"
            android:visibility="invisible"
            />

    </RelativeLayout>


</LinearLayout>