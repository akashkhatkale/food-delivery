<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newLocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".ui.location.NewLocationActivity">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/newLocationToolbar"
        app:title=" "
        />


    <EditText
        android:id="@+id/locationNameEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:focusable="false"
        android:cursorVisible="false"
        android:focusableInTouchMode="true"
        android:drawableTint="#70000000"
        android:text=""
        android:inputType="text"
        android:ellipsize="end"
        android:drawableRight="@drawable/white_arrow_forward"
        android:paddingEnd="15dp"
        android:drawablePadding="15dp"
        android:paddingStart="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:hint="Location name"
        android:textColor="@color/colorPrimary"
        android:layout_marginHorizontal="20dp"
        android:textColorHint="#70000000"
        android:textSize="12sp"
        android:maxLines="1"
        android:visibility="visible"
        android:background="@drawable/edittext_background"
        />

    <EditText
        android:id="@+id/completeAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableTint="#70000000"
        android:paddingEnd="15dp"
        android:drawablePadding="15dp"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:hint="Complete address"
        android:textColor="@color/colorPrimary"
        android:layout_marginHorizontal="20dp"
        android:textColorHint="#70000000"
        android:textSize="12sp"
        android:maxLines="1"
        android:visibility="visible"
        android:background="@drawable/edittext_background"
        />

    <EditText
        android:id="@+id/landmarkNameEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableTint="#70000000"
        android:paddingEnd="15dp"
        android:drawablePadding="15dp"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:hint="Landmark (Optional)"
        android:textColor="@color/colorPrimary"
        android:layout_marginHorizontal="20dp"
        android:textColorHint="#70000000"
        android:textSize="12sp"
        android:maxLines="1"
        android:visibility="visible"
        android:background="@drawable/edittext_background"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/homeTag_newLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:background="@drawable/button_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:fontFamily="@font/montserrat_medium"
            android:drawablePadding="10dp"
            android:textSize="12sp"
            android:drawableTint="#ACACAC"
            android:drawableStart="@drawable/white_home_icon"
            />

        <TextView
            android:id="@+id/workTag_newLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work"
            android:drawableTint="#ACACAC"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textColor="@color/colorGray"
            android:gravity="center_vertical"
            android:fontFamily="@font/montserrat_medium"
            android:drawablePadding="10dp"
            android:textSize="12sp"
            android:drawableStart="@drawable/white_work_icon"
            />

        <TextView
            android:id="@+id/otherTag_newLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:drawableTint="#ACACAC"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textSize="12sp"
            android:textColor="@color/colorGray"
            android:gravity="center_vertical"
            android:fontFamily="@font/montserrat_medium"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/white_location_icon"
            />

    </LinearLayout>

    <Button
        android:id="@+id/saveButton_newLocation"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/yellow_button_background"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Save changes"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:visibility="visible"
        app:backgroundTint="@null" />


</LinearLayout>